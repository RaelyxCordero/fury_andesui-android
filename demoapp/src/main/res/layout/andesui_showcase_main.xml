<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/andesui_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/andesui_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.mercadolibre.android.andesui.demoapp.feature.utils.PageIndicator
        android:id="@+id/page_indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/andes_white"
        android:gravity="center" />

    <com.mercadolibre.android.andesui.button.AndesButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:andesButtonText="@string/andes_button_text"
        app:andesButtonHierarchy="loud"
        app:andesButtonSize="large"
        app:andesButtonLeftIconDrawable="@drawable/andesui_icon_dynamic"
        />

</LinearLayout>