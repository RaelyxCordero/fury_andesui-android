<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/andes_tooltip_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/andes_gray_450"
        android:padding="16dp">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/andes_trigger_tooltip_top_left"/>

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/andes_trigger_tooltip_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:andesButtonSize="small"
            app:andesButtonHierarchy="loud"
            app:andesButtonText="@string/tooltip_trigger_button"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/andes_trigger_tooltip_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:andesButtonSize="small"
            app:andesButtonHierarchy="loud"
            app:andesButtonText="@string/tooltip_trigger_button"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@id/andes_trigger_tooltip_top_left"
            app:layout_constraintBottom_toTopOf="@id/andes_trigger_tooltip_bottom_left"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/andes_trigger_tooltip_bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:andesButtonSize="small"
            app:andesButtonHierarchy="loud"
            app:andesButtonText="@string/tooltip_trigger_button"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@id/andes_trigger_tooltip_left"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/andes_trigger_tooltip_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:andesButtonSize="small"
            app:andesButtonHierarchy="loud"
            app:andesButtonText="@string/tooltip_trigger_button"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/andes_trigger_tooltip_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:andesButtonSize="small"
            app:andesButtonHierarchy="loud"
            app:andesButtonText="@string/tooltip_trigger_button"
            app:layout_constraintTop_toBottomOf="@id/andes_trigger_tooltip_top_right"
            app:layout_constraintBottom_toTopOf="@id/andes_trigger_tooltip_bottom_right"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/andes_trigger_tooltip_bottom_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:andesButtonSize="small"
            app:andesButtonHierarchy="loud"
            app:andesButtonText="@string/tooltip_trigger_button"
            app:layout_constraintTop_toBottomOf="@id/andes_trigger_tooltip_right"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.mercadolibre.android.andesui.button.AndesButton
            android:id="@+id/andes_trigger_tooltip_centered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:andesButtonSize="small"
            app:andesButtonHierarchy="loud"
            app:andesButtonText="@string/tooltip_trigger_button"
            app:layout_constraintTop_toBottomOf="@id/andes_trigger_tooltip_bottom_right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="900dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/andes_trigger_tooltip_centered"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
